@using EntityLayer.Concrete
@model List<Blog> 

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Writer/WriterLayout.cshtml";
}

<table class="table mdi-table-border">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.BlogID</th>
    <td>@item.BlogTitle</td>
    <td>@item.BlogCreateDate</td>
    <td>@item.CategoryID</td>
    <td>@item.BlogStatus</td>
    <td><a href="#" class="btn btn-primary">Düzenle</a></td>
    <td><a href="#" class="btn btn-danger">Sil</a></td>
</tr>
    }
</table>
<a href="#" class="btn btn-success">Yeni Blog Oluştur</a>

