@model UserUpdateViewModel

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Writer/WriterLayout.cshtml";
}


    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri</h4>
                
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                    <input type="text" asp-for="@Model.namesurname" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>
                    <input type="text" asp-for="@Model.username" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresiniz</label>
                    <input type="text" asp-for="@Model.mail" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Yeni Şifreniz</label>
                    <input type="text" asp-for="@Model.password" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Görsel Yükle</label>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" asp-for="@Model.imageurl" class="form-control file-upload-info" disabled placeholder="Resim Seç">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                        </span>
                    </div>
                </div>
                @*<div class="form-group">
                    <label for="exampleTextarea1">Hakkında</label>
                    @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
                </div>*@
                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button asp-action="~/Views/Dashboard/Index/" class="btn btn-light">İptal</button>
            </form>
            </div>
        </div>
    </div>

