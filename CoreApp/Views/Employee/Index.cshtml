@using CoreApp.Controllers
@model List<Class1> 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeID</td>
            <td>@item.EmployeeName</td>
            <td><a href="/Employee/EditEmployee/@item.EmployeeID" class="btn btn-success">Düzenle</a></td>
            <td><a href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Employee/AddEmployee/" class="btn btn-primary">Ekleme İşlemi</a>

