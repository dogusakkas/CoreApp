@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Kayıt Ol</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post)) {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız Soyadınız</label>
                            @Html.TextBoxFor(x=>x.WriterName)
                            @Html.ValidationMessageFor(x=>x.WriterName)
                            @*<input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="" required="">*@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E Posta Adresiniz</label>
                            @Html.TextBoxFor(x => x.WriterMail)
                            @Html.ValidationMessageFor(x => x.WriterMail)
                            @*<input type="email" class="form-control" id="validationDefault02" name="WriterMail" placeholder="" required="">*@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 password_match" data-msg="Şifreler eşleşmiyor!">
                            <label for="exampleInputPassword1 mb-2">Şifreniz</label>
                            @Html.TextBoxFor(x => x.WriterPassword)
                            @Html.ValidationMessageFor(x => x.WriterPassword)
                            @*<input type="password" class="form-control" id="password1" name="WriterPassword1" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şifrenizi Tekrar Giriniz</label>
                            @Html.TextBoxFor(x => x.WriterPassword)
                            @*<input type="password" class="form-control" id="password2" name="WriterPassword2" placeholder="" required="">*@
                        </div>
                        <div class="col-md-12 mb-6">
                            <label for="validationCustom01">Görsel Dosya Yolu</label>
                            @Html.TextBoxFor(x => x.WriterImage)
                            @Html.ValidationMessageFor(x => x.WriterImage)
                            @*<input type="text" class="form-control" id="validationDefault01" name="WriterImage" placeholder="" required="">*@
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#" id="btn1">Tüm şartları okudum ve kabul ediyorum.</a>
                    </p>
                }

            </div>
        </div>
    </div>


</section>

<script>

    function comparePassword(event) {
        var WriterPassword1, WriterPassword2;

        if (event.type == 'change') {
            WriterPassword1 = $(this);
            WriterPassword2 = $(event.data.el);
        } else {
            WriterPassword2 = $(this);
            WriterPassword1 = $(event.data.el);
        }

        if (WriterPassword1.val() != WriterPassword2.val()) {
            WriterPassword2[0].setCustomValidity(event.data.msg);
        } else {
            WriterPassword2[0].setCustomValidity('');
        }
    }

    $(".password_match").each(function (i, e) {
        var msg = $(e).data('msg');
        if ($("input[type=password]", e).length == 2) {
            var elem = $("input[type=password]", e);
            $(elem[0]).change({ el: elem[1], msg: msg }, comparePassword);
            $(elem[1]).keyup({ el: elem[0], msg: msg }, comparePassword);
        }
    });

</script>

<script>
    $('#btn1').click(function () { swal("Verdiğiniz mail adresi üzerinden bilgi ve haver e-postaları spam ölçüsünüe varmadan gönderilmeye devam edilecektir. Sitemizde verdiğiniz mail adresi, telefon numarası kimseyle paylaşılmayacaktır!"); });
</script>



