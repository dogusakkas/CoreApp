@using EntityLayer.Concrete
@model List<Blog>


<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Yayınlanan 10 Bloğunuz</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Başlık </th>
                                <th> Durumu </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.OrderByDescending(x => x.BlogID).Take(10))
                            {
                                <tr>
                                    <td>
                                        <img src="@item.BlogImage" class="mr-2" alt="image"><a href="/Blog/BlogReadAll/@item.BlogID"> @item.BlogTitle</a>
                                    </td>
                                    <td>
                                        @if (item.BlogStatus)
                                        {
                                            <label class="badge badge-gradient-success">Aktif</label>
                                        }
                                        else
                                        {
                                            <label class="badge badge-gradient-danger">Pasif</label>
                                        }

                                    </td>

                                    <td> @item.Category.CategoryName </td>
                                    <td> @(((DateTime)item.BlogCreateDate).ToString("dd MMMM yyyy")) </td>
                                </tr>

                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
