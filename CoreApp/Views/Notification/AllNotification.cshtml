@using EntityLayer.Concrete
@model List<Notification>


@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Writer/WriterLayout.cshtml";
}

<script src="~/js/vendor/jquery.timeago.js"></script>
<script src="~/CoreBlogTema/js/jquery-2.2.3.min.js"> </script>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/global.js"></script>

<h1>Tüm Bildirimleriniz</h1>
<br />

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Bildirim Türü </th>
                                <th> İçerik </th>
                                <th> Tarih </th>
                                <th> Durumu </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.OrderByDescending(x => x.NotificationID))
                            {
                            <tr>
                                <td>@item.NotificationID</td>
                                <td> @item.NotificationType </td>
                                <td> @item.NotificationDetails </td>
                                <td>
                                    <p>  <time class="timeago" datetime="17 September 2014 12:00"></time></p>
                                </td>
                                <td>
                                    @if (item.NotificationStatus)
                                    {
                                        <label class="badge badge-gradient-success">Okunmadı</label>
                                    }
                                    else
                                    {
                                        <label class="badge badge-gradient-danger">Okundu</label>
                                    }
                                </td>
                            </tr>

                            }
                        


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

