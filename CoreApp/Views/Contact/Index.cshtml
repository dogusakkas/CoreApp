
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <link href="~/CoreBlogTema/css/contact.css" rel='stylesheet' type='text/css' />
</head>

<body>
    <!--/main-->
    <section class="main-content-w3layouts-agileits">

        <h3 class="tittle">Bize Ulaşın</h3>
        <p class="sub text-center">Yorumlarınız bizim için değerlidir</p>
        <div class="contact-map inner-sec">

            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d398611.8454144802!2d27.083775952665423!3d38.69128273886048!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14b99ac7a65549b7%3A0xdb68e0025a44d76f!2sManisa%20Merkez!5e0!3m2!1str!2str!4v1642758478875!5m2!1str!2str" class="map" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
        <div class="ad-inf-sec bg-light">
            <div class="container">
                <div class="address row">
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-map"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Adresimiz</h6>
                                <p>
                                    Manisa, Turkey
                                </p>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-envelope"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>E Posta</h6>
                                <p>
                                    <a href="mailto:dogusakkas@gmail.com"> dogusakkas@gmail.com</a>
                                </p>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="fas fa-mobile-alt"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Telefon Numaramız</h6>
                                <p>+90 234 567 8901</p>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="contact_grid_right">
                
                @await Html.PartialAsync("~/Views/Contact/ContactAdd.cshtml")

            </div>
        </div>
    </section>
    <!--//main-->
    
    

</body>

</html>