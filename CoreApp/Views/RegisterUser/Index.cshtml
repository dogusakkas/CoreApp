@model UserSignUpViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Üye Ol</title>

    <link href="~/adminpages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/adminpages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/adminpages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/adminpages/css/animate.css" rel="stylesheet">
    <link href="~/adminpages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>


            </div>
            <h1 style="font-size:30px">Üye Ol</h1>
            <form class="m-t" role="form" asp-action="Index">

                <div class="form-group">
                    <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.NameSurname" placeholder="Adınız Soyadınız" required="">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" asp-for="@Model.Mail" placeholder="Email" required="">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="Kullanıcı Adınızı Giriniz" required="">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Şifreniz" required="">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Şifrenizi Tekrar Giriniz" required="">
                </div>

                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Kullanım Şartları </label></div>
                </div>

                <button type="submit" class="btn btn-primary block full-width m-b">Üye Ol</button>

                <p class="text-muted text-center"><small>Bir Hesabınız Var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="~/RegisterUser/Login/">Giriş Yap</a>
            </form>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/adminpages/js/jquery-3.1.1.min.js"></script>
    <script src="~/adminpages/js/popper.min.js"></script>
    <script src="~/adminpages/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/adminpages/js/plugins/iCheck/icheck.min.js"></script>
    <script>$(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
